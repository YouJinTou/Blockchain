@model SendTransactionViewModel

@{
    ViewData["Title"] = "Send Transaction";
}

<h1>Send Transaction</h1>

<form asp-area="Wallets" asp-controller="Wallet" asp-action="Send" asp-antiforgery="true" method="post">
    <div class="row">
        <div class="col-xs-12">
            <div class="row form-group">
                <div class="col-xs-12">
                    <label asp-for="From"></label>
                    <input asp-for="From" class="form-control" />
                    <span asp-validation-for="From" class="text-danger"></span>
                </div>
            </div>

            <div class="row form-group">
                <div class="col-xs-12">
                    <label asp-for="To"></label>
                    <input asp-for="To" class="form-control" />
                    <span asp-validation-for="To" class="text-danger"></span>
                </div>
            </div>

            <div class="row form-group">
                <div class="col-xs-12">
                    <label asp-for="Amount"></label>
                    <input asp-for="Amount" class="form-control" />
                    <span asp-validation-for="Amount" class="text-danger"></span>
                </div>
            </div>

            <div class="row form-group">
                <div class="col-xs-12">
                    <label asp-for="PrivateKey"></label>
                    <input asp-for="PrivateKey" type="password" class="form-control" />
                    <span asp-validation-for="PrivateKey" class="text-danger"></span>
                </div>
            </div>

            <div class="row form-group">
                <div class="col-xs-12">
                    <input type="submit" class="btn btn-group" value="Sign Transaction" />
                </div>
            </div>
        </div>
    </div>
</form>

@section Scripts {
    <script src="~/lib/jquery-validation/dist/jquery.validate.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>
}